@model Cinemas
<body>
    <div class="container mt-5">
        <h2 style="font-size: 28px; margin-bottom: 20px; margin-top: 30px;">
            Edit Category
        </h2>

        <form method="post">
            <!-- Hidden ID -->
            <input type="hidden" name="CinemaId" value="@Model.CinemaId" />

            <!-- Cinema Name -->
            <div class="mb-3">
                <label for="Name" class="form-label">Edit Cinema Name</label>
                <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
            </div>

            <!-- Cinema Description -->
            <div class="mb-3">
                <label for="Description" class="form-label">Edit Cinema Description</label>
                <input type="text" class="form-control" id="Description" name="Description" value="@Model.Description" />
            </div>

            <!-- Cinema Address -->
            <div class="mb-3">
                <label for="Address" class="form-label">Edit Cinema Address</label>
                <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address" />
            </div>

           
            <button type="submit" class="btn btn-primary">Submit</button>
            <a href="/Admin/Cinema" class="btn btn-secondary">Cancel</a>
        </form>

    </div>
</body>
