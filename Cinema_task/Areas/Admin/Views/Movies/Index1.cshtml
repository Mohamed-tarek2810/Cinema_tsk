@model CategoriesAndCinemasVM
<body>
    <div class="container mt-5">
        <h2 style="font-size: 28px; margin-bottom: 20px; margin-top: 30px;">
            Create New Movies
        </h2>

        <form method="post"> 
            <div class="mb-3">
                <label for="Name" class="form-label">Movie Name</label>
                <input type="text" class="form-control" id="Name" name="Name"  required />
            </div>
          
            <div class="mb-3">
                <label for="Description" class="form-label">Movie Description</label>
                <input type="text" class="form-control" id="Description" name="Description" required />
            </div>   
            
            <div class="mb-3">
                <label for="Price" class="form-label"> Price</label>
                <input type="number" class="form-control" id="Price" name="Price" required />
            </div>
          
            <div class="mb-3">
                <label for="ImgUrl" class="form-label"> ImgUrl</label>
                <input type="number" class="form-control" id="ImgUrl" name="ImgUrl" required />
            </div>

            <div class="mb-3">
                <label for="CinemaId" class="form-label">Cinemas</label>
                <select class="form-select" name="CinemaId" id="CinemaId">
                    @foreach (var item in Model.Cinemas)
                    {
                        <option value="@item.CinemaId">@item.Name</option>
                    }
                </select>
            </div>

            <div class="mb-3">
                <label for="CategoryId" class="form-label">Category</label>
                <select class="form-select" name="CategoryId" id="CategoryId">
                    @foreach (var item in Model.Categories)
                    {
                        <option value="@item.CategoriesId">@item.Name</option>
                    }
                </select>
            </div>


            <div class="mb-3">
                <label for="MovieStatus" class="form-label">Status</label>
                <select name="MovieStatus" id="MovieStatus" class="form-select">
                    <option value="true">Available</option>
                    <option value="false">Not Available</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
            <a href="/Admin/Movies" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</body>

